<div id="main-container">
  <div class="container">
    <div class="span4">
      <!-- Page Title -->
      <div class="page-heading">
        <h1>Add Link</h1>
      </div>
      <!-- Alerts -->
      <div class="entry drop-shadow curved">
        <div class="contact-alerts">
      </div>
      <!-- Form -->
        <div class="row-fluid">
          <div class="span12">
            <%= simple_form_for([@board,@text_pin]) do |f| %>
              <%= f.error_notification %>
            <div class="form-inputs">
              <%= f.input :title %>
              <%= f.input :content %>
              <%= f.hidden_field :board_id, value: @board.id %>
            </div>
            <div class="form-actions">
              <%= f.button :submit %>
            </div>
          <% end %>
          </div>
          <%= link_to 'Back', board_path(@board) %>
        </div>
      </div>
    </div>
  </div>





