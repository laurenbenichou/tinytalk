<div id="main-container">
    <div class="container">

      <div class="span4">

        <!-- Page Title -->
        <div class="page-heading">
          <h1>Add Link</h1>
        </div>

          <!-- Alerts -->
          <div class="entry drop-shadow curved">
            <div class="contact-alerts">
        </div>


          <div class="row-fluid">
            <div class="span12">
              <%= simple_form_for([@board, @quote]) do |f| %>
                <%= f.error_notification %>
                <div class="form-inputs">
                  <%= f.input :quote %>
                  <%= f.input :author %>
                  <%= f.input :note %>
                  <%= f.hidden_field :board_id, value: @board.id %>
                </div>
                <div class="form-actions">
                  <%= f.button :submit,:html => {:class => 'contact-submit'} %>
                </div>
              <% end %>
            </div>
          </div>
      </div>
    </div>
  </div>



