<div id="main-container">
    <div class="container">

      <div class="span4">

        <!-- Page Title -->
        <div class="page-heading">
          <h1>Add a Photo</h1>
        </div>

          <!-- Alerts -->
          <div class="entry drop-shadow curved">
            <div class="contact-alerts">
        </div>
        <div class="row-fluid">
            <div class="span12">
<%= simple_form_for([@board, @pin]) do |f| %>
  <%= f.error_notification %>
  <%= f.full_error :image_file_size, class: "alert alert-error" %>
  <%= f.full_error :image_content_type, class: "alert alert-error" %>


  <div class="form-inputs">
    <%= f.input :image, label: "Upload an Image" %>
    <%= f.input :description, as: :text, input_html:{rows: "3"} %>
    <%= f.hidden_field :board_id, value: @board.id %>
  </div>

  <div class="form-actions">
    <br>
    <%= f.button :submit %>
  </div>
<% end %>
</div>
<%= link_to 'Back', board_path(@board) %>
          </div>
      </div>
    </div>
  </div>

